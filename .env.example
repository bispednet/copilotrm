NODE_ENV=development
PORT_API_CORE=4010
DATABASE_URL=postgres://<user>:<password>@localhost:5432/copilotrm
REDIS_URL=redis://localhost:6379
DANEA_READONLY_DSN=odbc://danea-readonly
COPILOTRM_DATA_DIR=/path/to/copilotrm/data
BISPCRM_AUTH_MODE=none
BISPCRM_PERSISTENCE_MODE=memory
BISPCRM_QUEUE_MODE=redis
BISPCRM_QUEUE_MEDIA_JOBS=true
BISPCRM_QUEUE_SEND_OUTBOX=true
SWARM_DEBUG_TELEGRAM=false

# ── LLM Routing ──────────────────────────────────────────────────────────────
# Provider primario: ollama | openai | anthropic | deepseek
LLM_PROVIDER=ollama
# Provider cloud di fallback (se il primario non risponde)
LLM_FALLBACK_PROVIDER=deepseek

# ── Ollama (locale / LAN) ────────────────────────────────────────────────────
OLLAMA_SERVER_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:27b
SMALL_OLLAMA_MODEL=gemma3:12b
MEDIUM_OLLAMA_MODEL=gemma3:12b
LARGE_OLLAMA_MODEL=gemma3:27b
USE_OLLAMA_EMBEDDING=
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# ── DeepSeek (cloud fallback economico) ──────────────────────────────────────
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1
SMALL_DEEPSEEK_MODEL=deepseek-chat
MEDIUM_DEEPSEEK_MODEL=deepseek-chat
LARGE_DEEPSEEK_MODEL=deepseek-reasoner

# ── OpenAI (opzionale) ───────────────────────────────────────────────────────
OPENAI_API_KEY=
SMALL_OPENAI_MODEL=gpt-4.1-mini
MEDIUM_OPENAI_MODEL=gpt-4.1-mini
LARGE_OPENAI_MODEL=gpt-4.1

# ── Anthropic (opzionale) ────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_SMALL=claude-haiku-4-5-20251001
ANTHROPIC_MODEL_LARGE=claude-sonnet-4-6

# ── Embedding ────────────────────────────────────────────────────────────────
EMBEDDING_OPENAI_MODEL=text-embedding-3-small

# ── Telegram Bot API ─────────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_ID_APPROVE_BOT=
TELEGRAM_CHANNEL_ID_APPROVE_POST=
TELEGRAM_ALLOWED_CHAT_IDS=

# ── Email (SendGrid HTTP API) ─────────────────────────────────────────────────
SENDGRID_API_KEY=
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=CopilotRM

# ── WhatsApp (Meta Cloud API) ─────────────────────────────────────────────────
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_API_VERSION=v19.0

# ── WordPress (content pipeline) ─────────────────────────────────────────────
WORDPRESS_SITE_URL=
WORDPRESS_USERNAME=
WORDPRESS_APP_PASSWORD=

# ── RSS Feeds ────────────────────────────────────────────────────────────────
RSS_FEEDS=

# ── Anagrafica azienda (per schede assistenza, PDF, preventivi) ───────────────
COMPANY_NAME=
COMPANY_ADDRESS=
COMPANY_CITY=
COMPANY_COUNTRY=Italy
COMPANY_PHONE=
COMPANY_PHONE2=
COMPANY_EMAIL=
COMPANY_PEC=
COMPANY_WEBSITE=
COMPANY_VAT=
COMPANY_CF=
COMPANY_REG=
COMPANY_BANK_IBAN=
COMPANY_CONSULTANT=
