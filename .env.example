NODE_ENV=development
PORT_API_CORE=4010
DATABASE_URL=postgres://copilotrm:copilotrm_dev_pwd@localhost:5432/copilotrm
REDIS_URL=redis://localhost:6379
DANEA_READONLY_DSN=odbc://danea-readonly
ELIZA_SOURCE_PATH=/home/funboy/eliza
ELIZA_ENV_FILE=/home/funboy/eliza/.env
BISPCRM_AUTH_MODE=header
BISPCRM_PERSISTENCE_MODE=postgres
BISPCRM_QUEUE_MODE=redis
BISPCRM_QUEUE_MEDIA_JOBS=true
BISPCRM_QUEUE_SEND_OUTBOX=true

# ── LLM Routing ──────────────────────────────────────────────────────────────
# Provider primario: ollama | openai | anthropic | deepseek
LLM_PROVIDER=ollama
# Provider cloud di fallback (se il primario non risponde)
LLM_FALLBACK_PROVIDER=deepseek

# ── Ollama (locale / LAN) ────────────────────────────────────────────────────
OLLAMA_SERVER_URL=http://192.168.178.87:11434   # Default: localhost:11434
OLLAMA_MODEL=gemma3:27b                          # Modello base (alias per LARGE)
SMALL_OLLAMA_MODEL=gemma3:12b                    # Classificazione / routing rapido
MEDIUM_OLLAMA_MODEL=gpt-oss:20b                  # Drafting e risposte intermedie
LARGE_OLLAMA_MODEL=gemma3:27b                    # Reasoning complesso / proposte
USE_OLLAMA_EMBEDDING=                            # TRUE = embedding via Ollama (1024d)
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large         # Modello embedding Ollama

# ── DeepSeek (cloud fallback economico) ──────────────────────────────────────
DEEPSEEK_API_KEY=                                # sk-...
DEEPSEEK_API_URL=https://api.deepseek.com/v1     # Default: https://api.deepseek.com
SMALL_DEEPSEEK_MODEL=deepseek-chat               # Task economici
MEDIUM_DEEPSEEK_MODEL=deepseek-chat              # Drafting
LARGE_DEEPSEEK_MODEL=deepseek-reasoner           # Reasoning avanzato

# ── OpenAI (opzionale) ───────────────────────────────────────────────────────
OPENAI_API_KEY=
SMALL_OPENAI_MODEL=gpt-4.1-mini
MEDIUM_OPENAI_MODEL=gpt-4.1-mini
LARGE_OPENAI_MODEL=gpt-4.1

# ── Anthropic (opzionale) ────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_SMALL=claude-haiku-4-5-20251001
ANTHROPIC_MODEL_LARGE=claude-sonnet-4-6

# ── Embedding ────────────────────────────────────────────────────────────────
EMBEDDING_OPENAI_MODEL=text-embedding-3-small    # Se USE_OLLAMA_EMBEDDING vuoto
